{
  "root": true,
  "env": {
    "node": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:n/recommended",
    "plugin:unicorn/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["n", "unicorn", "perfectionist", "prettier"],
  "rules": {
    "prettier/prettier": ["error"],
    "n/no-deprecated-api": "warn",
    "perfectionist/sort-imports": "warn"
  }
}
